@page
@model IndexModel
@{
    ViewData["Title"] = "Config";
}

@{
    foreach (var source in Model.ConfigItemsBySource.Keys.OrderBy(x => x.ToLower()))
    {
        var id = source.Replace(".", "-");
        <div id="accordion">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#@id" aria-expanded="true">
                            @source
                        </button>
                    </h5>
                </div>
                <div id="@id" class="collapse show" data-parent="#accordion">
                    <div class="card-body">
                        @foreach (var item in Model.ConfigItemsBySource[source].OrderBy(x => x.ToLower()))
                        {
                            @item <br />
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}